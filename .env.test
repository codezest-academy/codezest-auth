# Test Environment Configuration
NODE_ENV=test

# Database
DATABASE_URL=postgresql://testuser:testpassword@localhost:5433/testdb?schema=public

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6380
REDIS_PASSWORD=test-redis-password

# Server
PORT=3001

# JWT
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-for-testing-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (not used in tests, but required by config validation)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@example.com
SMTP_PASSWORD=test-password
EMAIL_FROM=noreply@codezest.com
EMAIL_FROM_NAME=CodeZest Academy Test

# Frontend
FRONTEND_URL=http://localhost:3000

# Security
ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=error
