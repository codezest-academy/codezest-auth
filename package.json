{
  "name": "@codezest-academy/codezest-auth",
  "version": "1.0.0",
  "description": "Authentication microservice for CodeZest Academy",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "NODE_ENV=test jest --runInBand",
    "test:env:up": "docker-compose -f docker-compose.test.yml up -d --wait",
    "test:env:down": "docker-compose -f docker-compose.test.yml down",
    "pretest": "npm run test:env:up && dotenv -e .env.test -- npx prisma db push --schema=node_modules/@codezest-academy/codezest-db/prisma/schema.prisma",
    "posttest": "npm run test:env:down",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "docs:generate": "tsoa spec-and-routes",
    "db:generate": "prisma generate --schema=node_modules/@codezest-academy/codezest-db/prisma/schema.prisma && cp -r node_modules/@codezest-academy/codezest-db/node_modules/.prisma/client node_modules/.prisma/",
    "db:push": "prisma db push --schema=node_modules/@codezest-academy/codezest-db/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=node_modules/@codezest-academy/codezest-db/prisma/schema.prisma"
  },
  "keywords": [
    "authentication",
    "microservice",
    "jwt",
    "oauth"
  ],
  "author": "CodeZest Academy",
  "license": "MIT",
  "dependencies": {
    "@codezest-academy/codezest-cache": "^1.0.1",
    "@codezest-academy/codezest-db": "^1.0.5",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "inversify": "^6.0.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "reflect-metadata": "^0.2.1",
    "strip-ansi": "^7.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.1.1",
    "prisma": "^5.22.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
